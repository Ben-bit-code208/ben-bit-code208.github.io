{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: irgendwas.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/DATA/Spiele/sourcecode/irgendwas.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch with Opera GX",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5500", 
            "runtimeExecutable": "C:\\Users\\User\\AppData\\Local\\Programs\\Opera GX\\opera.exe",
            "webRoot": "${workspaceFolder}"
        }
    ]
}
